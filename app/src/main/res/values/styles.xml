<resources>
    <style name="titre">
        <item name="android:textSize">25sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="sousTitre">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="paragraphe">
        <item name="android:layout_marginBottom">15dp</item>
        <item name="android:justificationMode">inter_word</item>
    </style>

    <style name="input">
        <item name="android:padding">10dp</item>
        <item name="android:background">@drawable/backInput</item>
        <item name="android:layout_width">250dp</item>
    </style>

    <style name="inputNumber">
        <item name="android:padding">10dp</item>
        <item name="android:background">@drawable/backInput</item>
        <item name="android:layout_width">100dp</item>
    </style>

    <style name="customButton">
        <item name="android:backgroundTint">@color/utopia_turquoise_moyen</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="contentBlock">
        <item name="android:background">@drawable/backContentBlock</item>
        <item name="android:layout_width">300dp</item>
        <item name="android:padding">10dp</item>
    </style>
</resources>